{
  "manifest_version": 3,
  "name": "Symbol Watcher",
  "version": "2.0",
  "description": "Detects symbols on Discord and OneOption and notifies server",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "host_permissions": [
    "http://localhost:*/*",
    "https://discord.com/*",
    "https://app.oneoption.com/*",
    "http://localhost:4113/*",
    "http://127.0.0.1:*/*"
  ],

  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://discord.com/channels/*",
        "https://app.oneoption.com/chat*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
