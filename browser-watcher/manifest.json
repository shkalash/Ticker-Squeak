{
  "manifest_version": 3,
  "name": "Symbol Watcher",
  "version": "2.0",
  "description": "Detects symbols on Discord and OneOption and notifies server",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "host_permissions": [
    "http://localhost:*/*",
    "https://discord.com/*",
    "https://app.oneoption.com/*",
    "http://localhost:4113/*",
    "http://127.0.0.1:*/*"
  ],

  "action": {
  "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png"
      },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://discord.com/channels/*",
        "https://app.oneoption.com/chat*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
  "background": {
    "service_worker": "background.js"
  }
}
